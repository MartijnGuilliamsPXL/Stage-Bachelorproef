@page "/"
@inject BackgroundTaskService BackgroundTask
<PageTitle>Blazor Bootstrap - WebAssembly Standalone App (.NET 8) - Starter Template</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new Blazor Bootstrap - Web App (.NET 8).
<br />
<br />
Interactive render mode: Server
<br />
Interactive location: Global




<h3>Background Task Control</h3>
<button @onclick="StartBackgroundTask">Start Background Task</button>
<button @onclick="StopBackgroundTask">Stop Background Task</button>

@code {
    private void StartBackgroundTask()
    {
        BackgroundTask.Start();
    }

    private void StopBackgroundTask()
    {
        BackgroundTask.Stop();
    }
}